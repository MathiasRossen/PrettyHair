<Window x:Class="PrettyHair.UI.View.Items"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrettyHair.UI.View"
        mc:Ignorable="d"
        Title="Items" Height="300" Width="300">
    <Grid>
        <Button x:Name="buttonClose" Content="Close Window" HorizontalAlignment="Left" Margin="42,29,0,0" VerticalAlignment="Top" Width="99" Click="buttonClose_Click"/>
        <Button x:Name="buttonAddItem" Content="Add Item" HorizontalAlignment="Left" Margin="42,67,0,0" VerticalAlignment="Top" Width="99"/>
        <Button x:Name="buttonGetItem" Content="Get Item" HorizontalAlignment="Left" Margin="42,107,0,0" VerticalAlignment="Top" Width="99"/>
        <Button x:Name="buttonRemoveItem" Content="Remove Item" HorizontalAlignment="Left" Margin="42,147,0,0" VerticalAlignment="Top" Width="99"/>

    </Grid>
</Window>

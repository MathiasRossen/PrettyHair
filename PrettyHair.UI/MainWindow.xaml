<Window x:Class="PrettyHair.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrettyHair.UI"
        xmlns:views="clr-namespace:PrettyHair.UI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Customer">
                <views:Customer x:Name ="CustomerViewControl" Loaded="CustomerViewControl_Loaded" />
            </TabItem>
            <TabItem Header="Orders">
                <views:Orders x:Name="OrderViewControl" Loaded="OrderViewControl_Loaded" />
            </TabItem>
            <TabItem Header="Items">
                <views:Items x:Name="ItemViewControl" Loaded="ItemViewControl_Loaded" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
